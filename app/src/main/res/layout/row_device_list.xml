<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/lytChats"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <LinearLayout
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/lytEdit"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_1"
                android:textColor="@color/grey_new"
                android:singleLine="true"
                android:textStyle="bold"
                android:fontFamily="@font/din_medium"
                android:textSize="@dimen/sp_15"/>

            <TextView
                android:id="@+id/tvAccountHolder"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_holder"
                android:fontFamily="@font/din_medium"
                android:textColor="@color/paymentgrey"
                android:textSize="@dimen/sp_14"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lytEdit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">



            <ImageView
                android:id="@+id/ivEdit"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/sp_22"
                android:layout_height="@dimen/sp_22"
                android:src="@drawable/ic_edit"/>


            <ImageView
                android:id="@+id/ivDelete"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/sp_22"
                android:layout_height="@dimen/sp_22"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/ic_dlt"/>
        </LinearLayout>


    </RelativeLayout>


</layout>