        android:layout_width="match_parent"
        android:id="@+id/ll"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/round_graw_pop"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_margin="@dimen/dp_10"
                android:orientation="horizontal">

