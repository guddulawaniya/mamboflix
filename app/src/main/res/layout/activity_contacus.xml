<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.activity.ContacUsActivity">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@color/white"/>



            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">


                    <TextView
                        android:padding="@dimen/dp_8"
                        android:id="@+id/tvCon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/din_medium"
                        android:textColor="@color/white"
                        android:text="" />


                    <TextView
                        android:padding="@dimen/dp_8"
                        android:id="@+id/tvCon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/din_medium"
                        android:textColor="@color/white"
                        android:text="" />


                    <TextView
                        android:padding="@dimen/dp_8"
                        android:id="@+id/tvCon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_medium"
                        android:layout_marginBottom="@dimen/dp_40"
                        android:textColor="@color/white"
                        android:text="" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:id="@+id/whatsaap"
                            android:src="@drawable/whatsaap">


                        </ImageView>

                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:id="@+id/facebook"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:src="@drawable/facebook">


                        </ImageView>
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="@dimen/dp_8"
                            app:cardBackgroundColor="@color/transparent"
                            app:cardElevation="@dimen/dp_3"
                            app:cardUseCompatPadding="false"
                            app:cardCornerRadius="@dimen/dp_10"
                            android:elevation="@dimen/dp_8">

                            <TextView
                                android:id="@+id/tvContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/din_medium"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/dp_10"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp_5"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/mail_us_at"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/din_medium"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:textColor="@color/white" />

                                    </RelativeLayout>


                                    <!--  <View
                                              android:layout_width="match_parent"
                                              android:layout_height="@dimen/dp_1"
                                              android:layout_marginTop="10dp"
                                              android:background="@color/grey_lite" />-->
                                    <TextView
                                        android:id="@+id/tvMailId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_10"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/din_medium"
                                        android:text="enquiries@750amped.co.za" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height=".5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/grey_lite" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:layout_margin="@dimen/dp_5"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:fontFamily="@font/din_medium"
                                            android:text="@string/call_us_at"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />

                                    </RelativeLayout>


                                    <!--  <View
                                              android:layout_width="match_parent"
                                              android:layout_height="@dimen/dp_1"
                                              android:layout_marginTop="10dp"
                                              android:background="@color/grey_lite" />-->
                                    <TextView
                                        android:id="@+id/tv_contact_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_10"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/din_medium"
                                        android:text="+110078451245" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height=".5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/grey_lite" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_15"
                                    android:layout_margin="@dimen/dp_5"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/tvTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/reach_us"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/din_medium"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:textColor="@color/white" />

                                    </RelativeLayout>

                                    <TextView
                                        android:id="@+id/tv_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/din_medium"
                                        android:textColor="@color/white"
                                        android:text="@string/b_7_first_floor_greater_noida_india"
                                        android:layout_marginTop="@dimen/dp_5"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/grey_lite"
                                    android:visibility="gone"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>